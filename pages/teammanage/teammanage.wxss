/* General layout */
.container {
  padding: 16px;
  background-color: #f8f8f8;
}

.header {
  padding: 10px;
  text-align: center;
  width: 99%;
}

.title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* Section layout */
.section {
  margin-top: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #666;
  margin-bottom: 10px;
}

/* Member item layout */
.member-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.member-name {
  font-size: 16px;
  flex-grow: 1;
  margin-left: 16px;
}

.action-button {
  border-radius: 12rpx;
  padding: 8px 12px;
  font-size: 14px;
  cursor: pointer;
}

.invite-button {
  background-color: #35b37d;
  color: white;
}

.remove-button {
  background-color: #ff4d4f;
  color: white;
}

.recruit-button {
  margin-top: 20px;
  background-color: #35b37d;
  color: white;
  border-radius: 8rpx;
  text-align: center;
  padding: 12px 0;
  font-size: 16px;
}
